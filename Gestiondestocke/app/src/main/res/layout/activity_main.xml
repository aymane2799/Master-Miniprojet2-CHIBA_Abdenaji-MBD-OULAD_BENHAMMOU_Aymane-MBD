<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintTop_toBottomOf="parent"
                  android:orientation="vertical"
    >


        <TextView android:id="@+id/header"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_120sdp"
                  android:text="@string/gestion_de_stock"
                  android:textColor="@color/white"
                  android:textSize="@dimen/_24sdp"
                  android:textStyle="bold"
                  android:gravity="center"
                  android:background="@color/purple_dark"

        />
        <ScrollView android:id="@+id/body"
                    android:layout_below="@id/header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:clipToPadding="true"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:background="@color/purple_light"

        >

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="vertical"
                              android:layout_margin="@dimen/_18sdp"
                              android:paddingHorizontal="@dimen/_20sdp"
                              android:paddingBottom="@dimen/_60sdp"
                >
                    <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">
                        <TextView android:id="@+id/cat_title"
                                  android:layout_marginRight="@dimen/_10sdp"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Categories"
                                  android:textSize="@dimen/_16sdp"
                                  android:textColor="#000000"
                                  android:layout_weight="1"
                                  android:gravity="center_vertical"
                        />
                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/dropdown_btn"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                app:boxBackgroundColor="@color/white"

                        >
                            <AutoCompleteTextView
                                    android:id="@+id/dd_tv"
                                    android:inputType="none"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Alimentation"
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/purple_dark"
                            >
                            </AutoCompleteTextView>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <com.google.android.material.card.MaterialCardView
                            android:layout_weight="4"
                            android:id="@+id/article_table"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardBackgroundColor="@color/white"
                    >
                        <ListView android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:id="@+id/articlesistView"
                                  android:paddingHorizontal="@dimen/_20ssp"
                                  android:paddingVertical="@dimen/_25ssp"
                        ></ListView>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                            android:layout_weight="3"
                            android:id="@+id/nombre_card"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardBackgroundColor="@color/white"
                            android:paddingVertical="@dimen/_30sdp"
                            app:cardUseCompatPadding="true"
                            android:elevation="2dp"

                    >
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="match_parent"
                                      android:orientation="vertical"
                                      android:gravity="center"

                        >
                            <LinearLayout android:layout_width="match_parent"
                                          android:gravity="center"
                                          android:layout_height="wrap_content"
                                          android:orientation="horizontal"
                                          android:paddingHorizontal="@dimen/_18sdp"
                                          android:layout_gravity="center_horizontal"
                                          android:layout_marginBottom="@dimen/_10sdp"
                            >
                                <TextView android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="@string/nombre"
                                          android:textSize="@dimen/_16sdp"
                                          android:layout_weight="1"
                                />
                                <TextView android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="3"
                                          android:textSize="@dimen/_16sdp"
                                          android:layout_weight="1"
                                />
                            </LinearLayout>
                            <LinearLayout
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="@dimen/_18sdp"
                                    android:layout_gravity="center_horizontal"
                            >
                                <TextView android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="@string/moyenne_pu"
                                          android:textSize="@dimen/_16sdp"
                                          android:layout_weight="1"
                                />
                                <TextView android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="10 dh"
                                          android:textSize="@dimen/_16sdp"
                                          android:layout_weight="1"
                                />
                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.button.MaterialButton android:layout_width="141dp"
                                                                       android:layout_weight="2"
                                                                       android:id="@+id/add_btn"
                                                                       android:layout_height="54dp"
                                                                       app:layout_constraintTop_toBottomOf="@id/nombre_card"
                                                                       android:layout_marginTop="@dimen/_18sdp"
                                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                                       android:text="@string/ajouter"
                                                                       android:textSize="@dimen/_16sdp"
                                                                       android:textAllCaps="false"
                                                                       app:cornerRadius="@dimen/_10sdp"
                                                                       android:layout_marginHorizontal="@dimen/_70sdp"
                                                                       android:onClick="addBtnClick"
                    />
                </LinearLayout>
        </ScrollView>

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>